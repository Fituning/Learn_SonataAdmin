{% block custom_collection_widget %}

    <div data-controller="collection"
         data-collection-prototype-value="{{ form_widget(prototype)|e('html_attr') }}"
    >
        <button type="button" data-collection-target="addBtn" data-action="click->collection#add">add</button>
        <div data-collection-target="list">
            {% for child in form.children %}
                {{- form_widget(child) -}}
            {% endfor %}
        </div>
        {#        <button type="button" data-collection-target="addBtn" data-action="click->collection#add">add</button> #}
    </div>
{% endblock %}


